---
export interface Props {
  image: string;
  title: string;
  weth: string;
  endsIn: string;
}
const { title, weth, endsIn, image } = Astro.props;
---

<div class="item-card">
  <img src={image} alt={title} />

  <div class="item-card-footer">
    <div class="item-card-footer-header">
      <h4>{title}</h4>
      <p>{weth} Weth</p>
    </div>
    <span class="card-line"></span>
    <div class="item-card-footer-bottom">
      <p class="card-ends-in">Ends in <span>{endsIn}</span></p>
      <button class="card-btn">Bid</button>
    </div>
  </div>
</div>

<style>
  .item-card img {
    width: 15rem;
  }
  .card-line {
    width: 100%;
    background: var(--gray-3);
    height: 0.05rem;
  }
  .item-card-footer {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .item-card-footer-header,
  .item-card-footer-bottom {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }
  .item-card-footer-bottom {
    align-items: center;
  }
  .item-card-footer-bottom .card-ends-in p {
    font-weight: 300;
  }
  .item-card-footer-bottom .card-ends-in span {
    font-weight: 530;
  }
  .item-card-footer-bottom .card-btn {
    padding: 0.4rem 1.5rem;
    border: 1.2px solid var(--gray-1);
    border-radius: 7px;
  }
</style>
